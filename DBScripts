create database reactivedb;

create table USER (USER_ID varchar(100) not null unique,
PASS varchar(100) not null, FIRST_NAME varchar(100) not null, LAST_NAME varchar(100) not null,
DOB date, CITY varchar(70) not null, STATE varchar(50) not null, COUNTRY varchar(50) not null,
PINCODE int not null);


create table ACCOUNT (ACCOUNT_NO int not null unique, USER_ID varchar(100) not null, ACCOUNT_TYPE varchar(20) not null,
BALANCE FLOAT not null, ACCOUNT_CREATED DATE not null, ACCOUNT_STATUS varchar(10) not null, ACCOUNT_UPDATED DATE,
ACCOUNT_BRANCH varchar(100));

create table LOAN_ACCOUNT(LOAN_ACC_NO int not null auto_increment, ACCOUNT_NO int not null, USER_ID varchar(100) not null,
LOAN_AMOUNT FLOAT not null, LOAN_TENURE int not null, INT_RATE float not null, OPEN_DATE date not null,
MONTHLY_EMI FLOAT not null, LOAN_TYPE varchar(20) not null);
